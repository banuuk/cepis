<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="edu.uky.cepis.domain.component.ProgramGroup" table="lstProggrouping">
		<meta attribute="class-description">Class to identify a Program Group of a user
			(Student)</meta>
		<cache region="edu.uky.cepis.cache.programgroup"
			usage="read-write" />
		<id name="programGroupCode" column="Proggroupingcode" type="string"
			length="15" />
		<!-- Following variable will be used in the drop down menu -->
		<property name="shortDesc" column="short_description" type="string"
			not-null="true" length="255" />
		<property name="description" column="Descproggrouping" type="string"
			length="255" />
		<property name="status" column="currency" type="string"
			length="15" />
	</class>
</hibernate-mapping>

